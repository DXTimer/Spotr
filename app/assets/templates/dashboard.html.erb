<div>
  <form>
    <fieldset id="search-block" class="buffer">
      <input type="text" ng-model="searchParam" id="searchTags" placeholder="Enter something to search" autocomplete="off">

      <div id="button-block" class="buffer">

        <button class="search-button" id="or-search" alt="search by location" title="search by location" ng-click="setAndOr('or')">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </button>

        <button class="search-button" id="and-search" alt="search by location" title="search by location" ng-click="setAndOr('and')">
          <i class="fa fa-times" aria-hidden="true"></i>
        </button>

        <button class="search-button" id="searchTagSubmit" ng-click="getTags(searchParam)" alt="search by hashtag" title="search for related tags">
          <i class="fa fa-hashtag" aria-hidden="true"></i>
        </button>

        <button class="search-button" id="searchImageSubmit" ng-click="searchByTags(searchParam)" alt="search images by tag/tags" title="search by image">
          <i class="fa fa-picture-o" aria-hidden="true"></i>
        </button>

        <button class="search-button" id="searchLocationSubmit" alt="search by location" title="search by location" ng-click="searchByLocation(searchParam)">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
        </button>

      </div>

    </fieldset>
  </form>

  <div class="buffer error">{{error}}</div>


  <br><br>

  <div id="tags-list">
    <p id="relatedTags" ng-repeat='tag in tags' ng-click="saveTag(tag.name)">{{ tag.name }} ({{tag.media_count}})</p>
    <p id="relatedTags" ng-repeat='address in addressList' ng-click="getImageByLocation(address.geometry.location.lat,address.geometry.location.lng)">{{ address.formatted_address }}</p>
  </div>

    <figure class="buffer">
      <gmap id="map" center="current-location" zoom="15"></gmap>
      <map-marker
        ng-repeat="location in locations"
        ng-class="{'active':location.isActive}"
        ng-style="{'background-image':'url(' + location.url + ')'}"
        ng-mouseenter="location.isActive=true; optionsSet('true')"
        ng-mouseleave="location.isActive=false; optionsSet('false')">
